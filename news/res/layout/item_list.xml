<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#96A2B2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_launcher" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >
		            
		             <TextView
		                 android:id="@+id/titleArticle"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:text="Title Article"
		                 android:textColor="#FFF"
		                 android:textSize="14sp" />

		             <LinearLayout
		                 android:layout_width="match_parent"
		                 android:layout_height="wrap_content" >

		                 <TextView
		                     android:id="@+id/dateArticle"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:text="Date Article"
		                     android:textColor="#FFF"
		                     android:textSize="12sp" />

		                 <TextView
		                     android:id="@+id/authorArticle"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:layout_marginLeft="5dp"
		                     android:text="Author Article"
		                     android:textColor="#FFF"
		                     android:textSize="12sp" />

		             </LinearLayout>

		             <TextView
		                 android:id="@+id/textRead"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:layout_marginLeft="5dp"
		                 android:textColor="#FFF"
		                 android:textSize="8sp"
		                 android:textStyle="italic" />
            
           		 </LinearLayout>

    </LinearLayout>
    
</LinearLayout>